@model EMS.Data.FormModels.EmpLeave.CreateLeaveRequestVM
@{
    ViewData["Title"] = "Apply for leave";
}

<h1>Apply Leave</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-4 mb-2">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                @Html.DropDownListFor(a => a.LeaveTypeId, new SelectList(Model.LeaveTypes, "Value", "Text"), "Select LeaveType", new { @class = "form-control" })
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <div class="row col-md-12 mb-2">
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control datepicker" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control datepicker" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-4 mb-2">
                <label asp-for="RequestComments" class="control-label"></label>
                <textarea asp-for="RequestComments" class="form-control"></textarea>
                <span asp-validation-for="RequestComments" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 text-center align-items-center">
                <button type="submit" class="btn btn-primary">Request Leave</button>
                <button class="btn btn-secondary" asp-action="MyLeave">Back to List</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFomat: "yy-mm-dd"
            });
        });
    </script>
}