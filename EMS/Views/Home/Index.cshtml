	<!-- Features Section -->
	<div class="container text-center py-16 bg-gradient-to-r from-gray-100 to-gray-300">
		<h2 class="text-4xl font-semibold mb-6 text-gray-800 wow animate__animated animate__zoomIn">Key Features</h2>
