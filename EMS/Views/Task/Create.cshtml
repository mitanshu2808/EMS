@model EMS.Data.Entities.Tasks.TaskModel

@{
    ViewData["Title"] = "Create Task";
}

<h2>Create New Task</h2>

<form asp-action="Create" method="post">
    <input asp-for="AssignedBy" type="hidden"/>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Deadline" class="control-label"></label>
        <input asp-for="Deadline" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="AssignedTo" class="control-label">Assign to Employee</label>
        <select asp-for="AssignedTo" class="form-control" asp-items="ViewBag.Employees">
            <option value="">-- Select Employee --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Task</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
