@model IEnumerable<EMS.Data.FormModels.EmpLeave.LeaveTypeVM>
@{
    ViewData["Title"] = "Leave Types";
}

<h1>Leave Types</h1>
<hr />
<div class="d-flex justify-content-end mr-3 mb-3">
    <a asp-action="Create" class="btn btn-primary"> 
        <i class="fa fa-plus" aria-hidden="true"></i> Create New Leave Type
    </a>
</div>
@if (Model is not null && Model.Any())
{
    <table id="tblData" class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.DefaultDays)</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.DefaultDays)</td>
                    <td>
                        <div class="row">
                            <div class="col-2">
                                <a asp-action="EditLeaveType" class="btn btn-warning" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                                </a>
                            </div>
                            <div class="col-2">
                                <form asp-action="DeleteLeaveType" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">
                                        <i class="fas fa-trash" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table id="tblData" class="table">
        <tr class="text-center">
            No Leave type available.
        </tr>
    </table>
}