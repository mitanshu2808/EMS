@model EMS.Data.FormModels.EmpSalary.AmountRequestVM
@{
    ViewData["Title"] = "Employee Salary";
}

<h1>Employees Salary</h1>

<div class="d-flex justify-content-end mr-3 mb-3">
    <a asp-action="Create" asp-controller="Amount" class="btn btn-primary">Add Employee Salary</a>
</div>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Salary</th>
            <th>Salary date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Amounts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestingEmployee.Firstname) @Html.DisplayFor(modelItem => item.RequestingEmployee.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalaryAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salarydate)
                </td>
                <td>
                    <div class="row">
                        <div class="col-2">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?')">
                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                </button>

                            </form>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
