@model EMS.Data.FormModels.EmpLeave.EditLeaveAllocationVM
@{
    ViewData["Title"] = "Edit Leave Allocation";
}

<h1>Editing @Model.LeaveType.Name Allocation for @Model.Employee.Lastname, @Model.Employee.Firstname </h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLeaveAllocation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="Employee" />
            <input type="hidden" asp-for="LeaveType" />
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-secondary" asp-action="LeaveAllocationDetail" asp-route-id="@Model.EmployeeId">Back to Details</a>
            </div>
        </form>
    </div>
</div>