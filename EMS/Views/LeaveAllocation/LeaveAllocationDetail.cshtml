@model EMS.Data.FormModels.EmpLeave.ViewAllocationsVM
@{
    ViewData["Title"] = "Leave Allocation Detail";
}

@if (Model is not null && Model.Employee is not null)
{
    <h1>Leave Allocation Details For - @Model.Employee.Lastname, @Model.Employee.Firstname</h1>
    <div class="m-2">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee.Firstname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.Firstname)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee.Lastname)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.Lastname)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee.DateofBirth)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.DateofBirth)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Employee.DateofJoin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Employee.DateofJoin)
            </dd>
        </dl>
    </div>
    <hr />
}

<h2>Leave Allocations</h2>
@if (Model is not null && Model.LeaveAllocations.Any())
{
    <div class="card">
        <ul class="list-group list-group-flush">
            @foreach (var item in Model.LeaveAllocations)
            {
                <li class="list-group-item">
                    <h6>
                        @item.LeaveType.Name
                        <span class="badge badge-secondary">@item.NumberOfDays</span>
                        <a asp-action="EditLeaveAllocation" asp-route-id="@item.Id" class="btn btn-warning">
                            <i class="fa fa-pencil"></i> Edit
                        </a>
                        <a class="btn btn-outline-secondary" asp-action="ListEmployees" asp-controller="LeaveAllocation">Back to List</a>
                    </h6>
                </li>
            }
        </ul>
    </div>
}
else
{
    <div class="card">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                No Leave Type Allocated..!
            </li>
        </ul>
    </div>
}